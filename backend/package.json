{
  "name": "radical-portfolio-copilot-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Radical Portfolio Copilot",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "import": "tsx scripts/import_companies.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@google/generative-ai": "^0.2.1",
    "express": "^4.18.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^1.2.2"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
